#include DIM 4

enum Direction { Left = 75, Right=77,Up=72,Down=80};
static int DirKey[4] = { Left, Right, Up, Down};
static int map[DIM][DIM];
static int x, y;
static int nMove;
static clock_t tstart;

static void init(){
 for(int i=0; i<DIM*DIM-1; i++)
    map[i/DIM][1%DIM]=i+1;
    map[DIM-1][DIM-1]=0;
    x= DIM-1; y=DIM-1;
    
    srand(time(NULL));
    tstart = clock();
    nMove=0;
    }
    static void display(){
    system("cls");
    printf("\tFifteen puzzle\n\t");
